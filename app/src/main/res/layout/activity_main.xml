<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@color/background"
    tools:context=".ActivityMain">

    <LinearLayout android:id="@+id/controller_lParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@drawable/card"
            tools:ignore="UselessParent">

            <ImageButton
                android:id="@+id/main_settings"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/outline_settings_24"
                android:layout_gravity="end"
                android:background="@color/transparent"
                />

            <TextView   android:id="@+id/controller_tText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <LinearLayout android:id="@+id/controller_lMaster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                >

                <ImageButton android:id="@+id/controller_bStart"
                    style="@style/Theme.ffe.ImageButton"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/outline_play_48"
                    />

<!--                <ImageButton android:id="@+id/controller_bSchedule"-->
<!--                    style="@style/Theme.ffe.ImageButton"-->
<!--                    android:layout_width="100dp"-->
<!--                    android:layout_height="100dp"-->
<!--                    android:layout_marginStart="100dp"-->
<!--                    android:src="@drawable/outline_watch_48"-->
<!--                    />-->

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>